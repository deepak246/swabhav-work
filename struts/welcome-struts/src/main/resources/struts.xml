<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
<package name="main" extends="struts-default">

   
<action name="home" class="com.techlabs.actions.HomeAction">
<result name="success">
/views/home.jsp
</result>
</action>

<action name="session" class="com.techlabs.actions.SessionAction">
<result name="success">
/views/session.jsp
</result>
</action>

<action name="login" class="com.techlabs.actions.LoginAction">
<result name="success">/views/login.jsp</result>

</action>

<action name="validate" class="com.techlabs.actions.LoginAction">
<result name="input">/views/login.jsp</result>
<result name="success">views/loginstatus.jsp</result>
</action>

</package>
</struts>